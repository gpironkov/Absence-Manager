@using Jandaya.Data.Models.BindingModels
@model ApproveBookingsBindingModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Approve/Reject Booking";
}

<div class="jumbotron">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <h2 class="d-flex justify-content-center text-dark">@ViewData["Title"]</h2>
            <br />
            <form class="form-horizontal w-75" method="post" asp-action="SetUserRole" asp-controller="UserManage">
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.FullName" class="col-sm-3 control-label"></label>
                        <div class="col-sm-7">
                            <input asp-for="@Model.FullName" disabled class="form-control" type="text" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.BookingType" class="col-sm-3 control-label"></label>
                        <div class="col-sm-7">
                            <input asp-for="@Model.BookingType" disabled class="form-control" type="text" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.StartDate" class="col-sm-3 control-label"></label>
                        <div class="col-sm-7">
                            <input asp-for="@Model.StartDate" disabled class="form-control" type="text" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.EndDate" class="col-sm-3 control-label"></label>
                        <div class="col-sm-7">
                            <input asp-for="@Model.EndDate" disabled class="form-control" type="text" />
                        </div>
                    </div>
                </div>
                @*<div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.Status" class="col-sm-3 control-label"></label>
                        <div class="col-sm-7">
                            @Html.DropDownListFor(x => x.Status, new SelectList(Model.Status), @Model.CurrentStatus)
                            @Html.DropDownList("MyType", EnumHelper.GetSelectList(typeof(MyType)), "Select My Type", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <span asp-validation-for="@Model.Status" class="text-danger"></span>
                    </div>
                </div>*@
                <hr class="mt-3 bg-resources hr-2" />
                <partial name="_SaveCancelButtonsPartial" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}