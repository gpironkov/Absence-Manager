@using Jandaya.Data.ViewModels
@model LoginUserViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var error = ViewData[Jandaya.Common.GlobalConstants.ModelError];
}

<div class="jumbotron">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <h2 class="d-flex justify-content-center text-dark">@ViewData["Title"]</h2>
            @if (error != null)
            {
                <p class="text-light">@error</p>
            }
            <form method="post" asp-action="Login" asp-controller="User">
                <hr />
                <div class="form-group">
                    <label asp-for="Username" class="d-flex justify-content-center text-dark "></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="d-flex justify-content-center text-dark "></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" name="LoginButton" class="btn btn-lg btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
