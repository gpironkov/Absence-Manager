@using Jandaya.Data.ViewModels
@model CreateUserViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-2.1.3.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="jumbotron">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h2 class="d-flex justify-content-center text-dark">@ViewData["Title"]</h2>
            <form class="form-horizontal w-75" method="post" asp-action="Register" asp-controller="User">
            <hr />
                @*asp-route-returnUrl="@Model.ReturnUrl"*@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.UserName" class="col-sm-3 control-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="@Model.UserName" class="form-control" type="text" autofocus />
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.Password" class="col-sm-3 control-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="@Model.Password" class="form-control" type="password" />
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.ConfirmPassword" class="col-sm-3 control-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.FirstName" class="col-sm-3 control-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="@Model.FirstName" class="form-control" type="text" />
                            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.LastName" class="col-sm-3 control-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="@Model.LastName" class="form-control" type="text" />
                            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.Email" class="col-sm-3 control-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="@Model.Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.Country" class="col-sm-3 control-label"></label>
                        <div class="col-sm-9">
                            <select asp-for="Country" class="form-control">
                                <option disabled selected>- - - Choose Country - - -</option>
                                <vc:countries></vc:countries>
                            </select>
                        </div>
                    </div>
                </div> <!-- /.form-group -->
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary btn-block w-50">Register</button>
                </div>
            </form> <!-- /form -->
        </div>
    </div>
</div> <!-- ./container -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
