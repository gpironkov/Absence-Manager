@using Jandaya.Data.Models.BindingModels
@model SetUserRoleBindingModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Set User Role";
}

<div class="jumbotron">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <h2 class="d-flex justify-content-center text-dark">@ViewData["Title"]</h2>
            <br />
            <form class="form-horizontal w-75" method="post" asp-action="SetUserRole" asp-controller="UserManage">
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.FullName" class="col-sm-3 control-label"></label>
                        <div class="col-sm-7">
                            <input asp-for="@Model.FullName" disabled class="form-control" type="text" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.Roles" class="col-sm-3 control-label"></label>
                        <div class="col-sm-7">
                            @Html.DropDownListFor(x => x.Roles, new SelectList(Model.Roles), @Model.CurrentUserRole)
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <span asp-validation-for="@Model.Roles" class="text-danger"></span>
                    </div>
                </div>
                <hr class="mt-3 bg-resources hr-2" />
                <partial name="_SaveCancelButtonsPartial" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
