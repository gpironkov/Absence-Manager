@using Jandaya.Data.Models.BindingModels
@model SetResourceGroupBindingModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Set Resource Group";
}

<div class="jumbotron">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <h2 class="d-flex justify-content-center text-dark">@ViewData["Title"]</h2>
            <br />
            <form class="form-horizontal w-75" method="post" asp-action="SetResourceGroup" asp-controller="UserManage">
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.FullName" class="col-sm-3 control-label"></label>
                        <div class="col-sm-7">
                            <input asp-for="@Model.FullName" disabled class="form-control" type="text" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                        <div class="d-flex justify-content-center">
                            <label asp-for="@Model.Name" class="col-sm-4 control-label"></label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(x => x.Name, new SelectList(Model.Name), " --- Choose Res. Group --- ")
                            </div>
                        </div>
                    </div>
                <hr class="mt-3 bg-resources hr-2" />
                <partial name="_SaveCancelButtonsPartial" />
            </form>
        </div>
    </div>
</div>
