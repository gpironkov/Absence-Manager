@using Jandaya.Data.ViewModels
@model AddNewResourceGroupViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Add New Resource Group";
}

<div class="text-center">
    <div>
        <br />
        <a class="btn btn-outline-primary btn-lg" asp-controller="UserManage" asp-action="GetUserData">Manage Users</a>
        <a class="btn btn-outline-primary btn-lg" asp-controller="CalendarManage" asp-action="CreateHoliday">Manage Calendar by Country</a>
        <a class="btn btn-outline-primary btn-lg" asp-controller="ResourceGroupsManage" asp-action="ResourceGroups">Manage Resource Groups</a>
        <a class="btn btn-outline-primary btn-lg" asp-controller="BookingTypesManage" asp-action="BookingTypes">Manage Booking Types</a>
    </div>
</div>
<br />
<div class="jumbotron">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="d-flex justify-content-center text-dark">@ViewData["Title"]</h2>
            <br />
            <form class="form-horizontal w-75" method="post" asp-action="ResourceGroups" asp-controller="ResourceGroupsManage">
                <div class="form-group">
                    <div class="d-flex justify-content-end">
                        <label asp-for="@Model.Name" class="col-sm-3 control-label"></label>
                        <div class="col-sm-7">
                            <input asp-for="@Model.Name" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                </div>
                <hr class="mt-3 bg-resources hr-2" />
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary btn-block w-75">Create resource group</button>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <form class="form-horizontal w-50">
                <div class="form-group">
                    <div class="d-flex justify-content-start">
                        <vc:resource-groups></vc:resource-groups>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}