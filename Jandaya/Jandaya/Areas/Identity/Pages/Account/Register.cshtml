@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-2.1.3.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="container">
    <form class="form-horizontal" role="form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.UserName" class="col-sm-3 control-label"></label>
            <div class="col-sm-9">
                <input asp-for="Input.UserName" class="form-control" type="text" autofocus />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password" class="col-sm-3 control-label"></label>
            <div class="col-sm-9">
                <input asp-for="Input.Password" class="form-control" type="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword" class="col-sm-3 control-label"></label>
            <div class="col-sm-9">
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.FirstName" class="col-sm-3 control-label"></label>
            <div class="col-sm-9">
                <input asp-for="Input.FirstName" class="form-control" type="text" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.LastName" class="col-sm-3 control-label"></label>
            <div class="col-sm-9">
                <input asp-for="Input.LastName" class="form-control" type="text" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.Email" class="col-sm-3 control-label"></label>
            <div class="col-sm-9">
                <input asp-for="Input.Email" class="form-control" type="email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.Country" class="col-sm-3 control-label"></label>
            <div class="col-sm-9">
                <select asp-for="Input.Country" class="form-control">
                    <option disabled selected>- - - Choose Country - - -</option>
                    <vc:countries></vc:countries>
                </select>
            </div>
        </div> <!-- /.form-group -->

        <button type="submit" class="btn btn-primary btn-block">Register</button>
    </form> <!-- /form -->
</div> <!-- ./container -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
